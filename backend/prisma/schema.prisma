
generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
id Int @id @default(autoincrement())
name String
email String @unique
password String 
createdAt DateTime @default(now())
role Role @default(CLIENT)
products Product[]

}

model Product {
  id Int @id @default(autoincrement())
  name String
  description String?
  price Float
  createdAt DateTime @default(now())
  userId Int
  user User @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  CLIENT
}



